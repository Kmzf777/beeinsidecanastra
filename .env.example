# ============================================
# Beeinside — Environment Variables
# ============================================
# Copy this file to .env.local and fill in your values.
# DO NOT commit .env.local with real credentials.
# ============================================

# --------------------------------------------
# Bling OAuth — Conta 1
# --------------------------------------------
# Obtenha em: https://developer.bling.com.br/aplicativos
BLING_CLIENT_ID_1=
BLING_CLIENT_SECRET_1=

# --------------------------------------------
# Bling OAuth — Conta 2
# --------------------------------------------
BLING_CLIENT_ID_2=
BLING_CLIENT_SECRET_2=

# --------------------------------------------
# Bling OAuth — Redirect URI (same for both accounts)
# --------------------------------------------
# Must match the redirect URI configured in Bling developer portal
BLING_REDIRECT_URI=http://localhost:3000/api/auth/bling/callback

# --------------------------------------------
# Supabase
# --------------------------------------------
# Obtenha em: Supabase Dashboard > Project Settings > API
NEXT_PUBLIC_SUPABASE_URL=
NEXT_PUBLIC_SUPABASE_ANON_KEY=
SUPABASE_SERVICE_ROLE_KEY=

# --------------------------------------------
# Database
# --------------------------------------------
# Connection string do banco PostgreSQL (Supabase)
DATABASE_URL=
